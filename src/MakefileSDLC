CC = gcc
CFLAGS = -Wall `idris --include` `pkg-config --cflags SDL2_gfx`

sdlrun.o: config sdlrun.c sdlrun.h

config: .PHONY
	echo "%flag C \"`pkg-config --libs SDL2_gfx`\"" > Graphics/Config.idr
	echo "%flag C \"`pkg-config --cflags SDL2_gfx`\"" >> Graphics/Config.idr

clean: .PHONY
	rm sdlrun.o

.PHONY:
